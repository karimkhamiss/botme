<div id="update-quantity-popup" class="popup">
    <i class="fa fa-times" data-toggle="tooltip" data-placement="right" title="Close"></i>
    <h3 class="popup-title">
        Update Quantity
    </h3>
    <div class="popup-content">
        <form id="update-quantity">
            <input type="hidden" name="id">
            <div class="col-xs-12">
                <input required type="number" name="quantity" placeholder="New Quantity">
                <label id="cart-quantity"></label>
            </div>
        <div class="col-xs-12 text-center">
            <button type="submit" class="blue-btn">
                Update
            </button>
        </div>
        <div class="clearfix"></div>
        <div class="alert"></div>
        <div class="clearfix"></div>
        </form>
    </div>
</div>